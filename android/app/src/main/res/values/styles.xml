<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        
        <!-- Custom style for DatePicker and TimePicker -->
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <!-- Custom style for DatePicker -->
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">#645ef2</item>
        <item name="android:calendarTextColor">@android:color/black</item>
        <item name="android:dayOfWeekBackground">@android:color/white</item>
        <item name="android:yearListSelectorColor">#645ef2</item>
        <item name="android:colorControlNormal">@android:color/black</item>
        <item name="android:colorControlActivated">#645ef2</item>
        <item name="android:colorControlHighlight">#645ef2</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:selectableItemBackgroundBorderless">@android:color/white</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>

    <style name="CustomDatePickerDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#645ef2</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">#645ef2</item>
    </style>

    <!-- Custom style for TimePicker -->
    <style name="CustomTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">#645ef2</item>
        <item name="android:numbersTextColor">@android:color/black</item>
        <item name="android:numbersSelectorColor">#645ef2</item>
        <item name="android:numbersBackgroundColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">#645ef2</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>